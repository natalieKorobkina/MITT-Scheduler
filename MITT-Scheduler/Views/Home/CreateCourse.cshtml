@model  CreateCourseBindingModel

@{
    ViewBag.Title = "CreateCourse";
}

<div class="main-panel">
    <div class="panel panel-success">
        <div class="panel-heading">Create your Course</div>
        <div class="panel-body">
            @using (Html.BeginForm("CreateCourse", "Home", FormMethod.Post))
            {
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.TutorName, new { @class = "control-label col-md-2" })
                    @Html.TextBoxFor(m => m.TutorName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ProgramName, new { @class = "control-label col-md-2" })
                    @Html.TextBoxFor(m => m.ProgramName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CourseName, new { @class = "control-label col-md-2" })
                    @Html.TextBoxFor(m => m.CourseName)
                </div>
                <div class="form-group">
                    <label for="date-picker-input" class="control-label col-md-2">Start Date</label>
                    <div class='input-group date' id='startdatepicker'>
                        <span class="input-group-addon calender" style="border-right:1 !important">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                        @Html.TextBoxFor(m => m.StartDate, new { Id = "populated-date" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="date-picker-input" class="control-label col-md-2">End Date</label>
                    <div class='input-group date' id='enddatepicker'>
                        <span class="input-group-addon calender">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                        @Html.TextBoxFor(m => m.EndDate, new { Id = "populated-date" })
                    </div>
                </div> <div class="form-group">
                    <label for="date-picker-input" class="control-label col-md-2">Start Time</label>
                    <div class='input-group date' id='starttimepicker'>
                        <span class="input-group-addon calender">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                        @Html.TextBoxFor(m => m.StartTime, new { Id = "populated-date" })
                    </div>
                </div> <div class="form-group">
                    <label for="date-picker-input" class="control-label col-md-2">End Time</label>
                    <div class='input-group date' id='endtimepicker'>
                        <span class="input-group-addon calender">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                        @Html.TextBoxFor(m => m.EndTime, new { Id = "populated-date" })
                    </div>
                </div>
                <hr />
                <input type="submit" value="Create Course" class="btn btn-default" />
            }
        </div>
    </div>
</div>
